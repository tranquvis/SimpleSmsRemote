<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout_item_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/imageView_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_local_phone_grey_700_24dp" />

    <ImageButton
        android:id="@+id/imageButton_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:src="@drawable/ic_remove_circle_red_400_24dp" />

    <android.support.v7.widget.AppCompatAutoCompleteTextView
        android:id="@+id/edittext_phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/imageView_type"
        android:layout_toLeftOf="@+id/imageButton_delete"
        android:layout_toRightOf="@+id/imageView_type"
        android:layout_toStartOf="@+id/imageButton_delete"
        android:hint="@string/hint_phone_edit"
        android:inputType="phone"
        android:textColorHint="#a8a8a8" />

</RelativeLayout>